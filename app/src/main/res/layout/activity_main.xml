<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="@color/backgroundColor" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/main_title"
        android:id="@+id/main_title_textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:textSize="30sp"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/main_subtitle"
        android:id="@+id/main_subtitle_textView"
        android:layout_below="@+id/main_title_textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:gravity="center|center_horizontal"
        android:textSize="20sp"
        android:textColor="@android:color/white" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_quiz_button_text"
        android:paddingLeft="26dp"
        android:paddingRight="26dp"
        android:id="@+id/start_quiz_button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="49dp"
        android:textColor="@color/backgroundColor"
        android:background="@android:color/white" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textCursorDrawable="@null"
        android:textColor="@android:color/white"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/first_name_editText"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/main_subtitle_textView"
        android:layout_alignLeft="@+id/main_subtitle_textView"
        android:layout_alignStart="@+id/main_subtitle_textView"
        android:gravity="center|center_horizontal"
        android:textSize="20sp" />
</RelativeLayout>
